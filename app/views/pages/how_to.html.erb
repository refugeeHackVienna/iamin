<% @title = t('.title') %>

<div class="pages-static">
  <section class="pages-static-section">
    <h1 class="pages-title h2"><i class="far fa-question-circle" aria-hidden="true"></i> <%= t('.title') %></h1>

    <%= link_to t('.title_ngos'), '#ngos', class: 'pages-nav-link' %>
    <%= link_to t('.title_users'), '#users', class: 'pages-nav-link' %>

    <h2 id="ngos" class="h3"><i class="fas fa-users" aria-hidden="true"></i> <%= t('.title_ngos') %></h2>
    <%= simple_format t('.text_ngos') %>
    <h2 id="users" class="h3"><i class="fas fa-user" aria-hidden="true"></i> <%= t('.title_users') %></h2>
    <%= simple_format t('.text_users') %>
  </div>
</div>
